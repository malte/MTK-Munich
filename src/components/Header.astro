---
import siteConfig from "../data/site-config";
import Nav from "../components/Nav.astro";
---

<header class="w-full mt-[3.2rem] sm:mb-[5.45rem]">
  {
    siteConfig.logo && siteConfig.logo?.src ? (
      <a href="/">
        <img
          src={siteConfig.logo.src}
          alt={siteConfig.logo.alt || ""}
          class="max-h-12"
        />
      </a>
    ) : (
      <a class="text-gradient text-5xl leading-none" href="/">
        {siteConfig.title}
      </a>
    )
  }
  {
    siteConfig.subtitle && (
      <p class="text-2xl mt-2 leading-tight">{siteConfig.subtitle}</p>
    )
  }
</header>
